{
   "manifest_version": 2,
   "name": "CADD Microsystems Netsuite Extension",
   "description": "Extends Netsuite functionality using JQuery",
   "permissions": [ "activeTab", "https://ajax.googleapis.com/" ],
   "version": "0.3",

   "background": {
      "scripts": [ "jquery-3.2.1.min.js" ]
   },

  "applications": {
  "gecko": {
    "id": "netsuiteaddon@example.com",
    "update_url": "https://github.com/subaru25rs/netsuiteaddon/blob/master/Updates/updates.json"
  }
},


  "browser_action": {
      "default_icon": "cadd.png",
      "default_popup": "popup.html"
   },

   "icons": {"128": "128.png"
   },

   "content_scripts": [ {
      "js": [ "jquery-3.2.1.min.js", "content.js" ],
      "matches": [ "https://system.netsuite.com/*", "https://system.na3.netsuite.com/*", "https://system.sandbox.netsuite.com/", "https://system.na1.netsuite.com/*", "https://system.eu1.netsuite.com/*" ],
      "run_at": "document_start"
   } ]

}
